<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashscreen.SplashActivity"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".StartActivity"
        android:paddingBottom="35dp"
        >

        <ImageView
            android:id="@+id/img_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_start"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="display_img_start"/>

        <TextView
            android:id="@+id/title_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:text="Share Your Activities"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginHorizontal="50dp"/>

        <TextView
            android:id="@+id/desc_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This app will share your activity to your friend and make new journey"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/title_start"
            app:layout_constraintStart_toStartOf="@id/title_start"
            app:layout_constraintEnd_toEndOf="@id/title_start"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/desc_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Let's Start"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="60dp"
            android:textSize="21sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

